<% layout('layouts/boilerplate') %>
<h1>Welcome to YelpCamp</h1>
    <h2>All Campgrounds</h2>   
      <% for (const ground of campground) { %>
      <div class="card mb-5">
        <div class="row">
          <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%= ground.image[0].url %>">
          </div>
          <div class="col-md-7">
            <div class="card-body">
              <h5 class="card-title"><%=ground.title %></h5>
              <p class="card-text"> <%= ground.description %></p>
              <p class="card-text">
                <small class="text-muted"><%=ground.location %></small>
              </p>
              <a class="btn btn-primary" href="/campgrounds/<%=ground._id%>">View</a>
            </div>
          </div>
        </div>
      </div>
    <%  } %> 