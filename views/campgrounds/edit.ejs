<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Camp details</h1>
        <div class="col-6 offset-3">
            <form class="needs-validation" action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST"
                enctype="multipart/form-data" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="title">Camp</label>
                    <input class="form-control" type="text" name="campground[title]" id="title"
                        value="<%=campground.title %>" required>
                    <div class="invalid-feedback">
                        Camp name cannot be blank
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location"
                        value="<%=campground.location%>" required>
                    <div class="invalid-feedback">
                        Location cannot be blank
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image"> Add Images</label>
                    <input class="form-control" type="file" name="image" id="image" multiple>
                    <div class="valid-feedback" id="image-validation-valid">
                        Looks good!
                    </div>
                    <div class="invalid-feedback" id="image-validation-invalid">
                        Upload a valid image (jpg, jpeg, png or webp)
                    </div>
                </div>
                <div class="mb-3">
                    <% campground.image.forEach(function(img, i) { %>
                        <img src="<%=img.thumbnail%>" class="img-thumbnail">
                        <div class="form-check-inline">
                            <input type="checkbox" id="<%=i %>" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="<%=i %>">Delete</label>
                        <% }) %>
                </div>
                <div class="mb-3">
                    <label for="price">Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon1">$</span>
                        <input class="form-control" type="number" name="campground[price]" id="price" placeholder="0"
                            value="<%= campground.price %>" required>
                        <div class="invalid-feedback">
                            Price cannot be blank
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" cols="30" rows="5" type="text" name="campground[description]"
                        id="description" required><%=campground.description %></textarea>
                    <div class="invalid-feedback">
                        Description cannot be blank
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Cancel</a>
        </div>
    </div>