<% layout('layouts/boilerplate') %>

    <h1 class="h1">Create an account</h1>

    <form action="/register" method="POST" class="col-3 needs-validation" novalidate>
        <div><label class="form-label" for="email">Email</label>
            <input class="form-control mb-3 " type="email" name="email" id="email" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please Enter a valid email
            </div>
        </div>
        <div><label class="form-label" for="username">Username</label>
            <input class="form-control mb-3 " type="text" name="username" id="username" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                username cannot be blank
            </div>
        </div>
        <div> <label class="form-label" for="password">Password</label>
            <input class="form-control mb-3 " type="password" name="password" id="password" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Enter a valid password
            </div>
        </div>
        <button class="btn btn-success" type="submit">Create account</button>
    </form>